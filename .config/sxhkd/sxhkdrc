#
# General
#

# Take a screenshot to clipboard
Print
	spectacle -b -m -c

# Take a screenshot of a selection
super + Print
	spectacle -b -r -c

super + shift + s
    spectacle -b -r -c

# Take a screenshot of a selection
alt + Print
	spectacle -b -a -c

# Open screenshot utility
super + shift + Print
	spectacle

# Name a window
super + shift + m
	notify-send "`xtitle`"

# New browser window
super + n
	firefox

# New browser window
super + shift + n
	firefox --private-window

# Battery Level Timer
super + b
	batLev

# Lock The Screen
ctrl + alt + Delete
    lock

# Lock and Suspend
super + alt + Delete
    lock-no-video & systemctl suspend

# Toggle Monitor
XF86Display
	monitor-apply

# terminal emulator
super + Return
    alacritty

# program launcher
super + @space
	rofi -show run -width -40

# File Manager
super + e
	thunar

# Restart sxhkd and polybar
super + Escape
	pkill -USR1 -x sxhkd && polybar-msg cmd restart

# Toggle polybar
super + shift + g
	togglePolybar

# Toggle Notifications
super + shift + i
	toggleNotifications

# Toggle compositor
super + shift + c
    compositor-toggle

# Toggle VPN
super + shift + v
    toggleVPN

# Open calculator
super + c
    calc

# Set tabbed window
super + ctrl + alt + t
    bspc query -n -N focused > /tmp/tabbed

# Add window to tabbed
super + ctrl + t
    xdotool windowreparent `bspc query -n -N focused` `cat /tmp/tabbed`


super + ctrl + alt + shift + t
    xdotool windowreparent `cat /tmp/tabbed | xargs xwininfo -children -id | sed -n '/[0-9]\+ \(child\|children\):/,$s/ \+\(0x[0-9a-z]\+\).*/\1/p' | head -n1` `xwininfo -root | grep "Window id" | cut -c 22-26`


#
# bspwm hotkeys
#

# Scratchpad
super + shift + e
	id=$(cat /tmp/scratchid);\
	curDesk=$(bspc query -D -d focused);\
	bspc node $id -d $curDesk;bspc node $id -g hidden;bspc node -f $id

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# send to the given desktop
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# focus given desktop
super + {1-9,0}
    id=$(cat /tmp/scratchid);\
    num='^{1-9,10}';\
    bspc node $id -d $num;\
    bspc desktop -f $num

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
